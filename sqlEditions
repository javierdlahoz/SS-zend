  `app_user_id` int(11) NOT NULL AUTO_INCREMENT,
  `username` varchar(40) DEFAULT NULL,
  `password` varchar(100) NOT NULL,
  `type` varchar(20) DEFAULT NULL,
  `email` varchar(100) DEFAULT NULL,
